<Prefab>
  <Constants>
    <Constant Name="Mission.MainAgentHUD.HeroHealthBar.Frame.Height" BrushName="Mission.MainAgentHUD.HeroHealthBar.Frame" BrushLayer="Default" BrushValueType="Height" />
  </Constants>
  <Window>
    <Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent">
      <Children>

        <ExperienceBarWidget Id="Canvas" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!Mission.MainAgentHUD.HeroHealthBar.Frame.Height"
                             SuggestedHeight="!Mission.MainAgentHUD.HeroHealthBar.Frame.Height" HorizontalAlignment="Right"
                             VerticalAlignment="Bottom" MarginBottom="98" MarginRight="264" LevelProgression="@LevelProgression"
                             IsVisible="@ShowExperienceBar">
          <Children>
            <TextWidget Text="@RewardMultiplier" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" HorizontalAlignment="Center"
                        VerticalAlignment="Center" Brush="AgentAmmoCount.Text" Brush.TextVerticalAlignment="Center" Brush.FontSize="26"
                        Brush.FontColor="#53962AFF" MarginLeft="18" />
            <Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="28" SuggestedHeight="!Mission.MainAgentHUD.HeroHealthBar.Frame.Height"
                    HorizontalAlignment="Left" VerticalAlignment="Center" />
            <Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="28" SuggestedHeight="!Mission.MainAgentHUD.HeroHealthBar.Frame.Height"
                    HorizontalAlignment="Left" VerticalAlignment="Center" MarginLeft="28" />
          </Children>
        </ExperienceBarWidget>

        <TextWidget Text="cRPG Mod: Work in Progress" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" HorizontalAlignment="Left"
                    VerticalAlignment="Top" Brush="AgentAmmoCount.Text" Brush.TextVerticalAlignment="Top" Brush.FontSize="30"
                    Brush.FontColor="#FFFFFFFF" MarginLeft="9" />
      </Children>
    </Widget>
  </Window>
</Prefab>
